<!DOCTYPE html>
<html>
  <head>
    <title>PROIECTRuby</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' %>
    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
    <% if current_user != nil then %>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
  <a class="navbar-brand" href="#">BLA BLA SITE NUME </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbar">
    <ul class="navbar-nav mr-auto">
      <li class="nav navbar-nav">
        <%= link_to "STORE", home_path, class:"nav-link" %>
      </li>

      <li class="nav-item">
        <%= link_to "PS4", items_path(platform: 'PS4') , class:"nav-link" %>
      </li>
      <li class="nav-item">
            
            <%= link_to "PC", items_path(platform: 'PC') , class:"nav-link"%>
        </li>
       <li class="nav-item">
            <%= link_to "XBOX", items_path(platform: 'XBOX') , class:"nav-link"%>
      </li>
        <li class="nav-item">
            <%=link_to current_user.username, user_path(current_user.id), class:"nav-link"%>  
        </li>
        
    </ul>
    <%=link_to "LOG OUT", destroy_user_session_path,method: :delete, class:"nav-link"%>
    <form class="form-inline my-2 my-lg-0" action="/search">
      <input class="form-control mr-sm-2" name="q" type="text" placeholder="Search" aria-label="Search">
      <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
    </form>
  </div>
</nav>
<%  end %>
<p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>

</html>
